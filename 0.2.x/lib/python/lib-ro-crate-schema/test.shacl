ex:ClassDefinitionShape a sh:NodeShape ;
    sh:targetClass rdfs:Class ;
    sh:property [
        sh:path rdfs:subClassOf ;
        sh:nodeKind sh:IRI;
        sh:minCount 1 ;
        sh:maxCount 1;
    ] ;
    sh:property [
        sh:path owl:restriction ;
        sh:minCount 0 ;
    ] ;
    sh:property [
        sh:path owl:equivalentClass ;
        sh:minCount 0 ;
    ] ;
    sh:property [
        sh:path rdfs:label ;
        sh:minCount 0 ;
    ] ;
    sh:property [
        sh:path rdfs:comment ;
        sh:minCount 0 ;
    ]  .

# ex:MetadataEntryShape a sh:NodeShape ;
